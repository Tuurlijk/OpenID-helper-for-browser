{
    "name": "__MSG_extensionName__",
    "version": "1.2.0",
    "manifest_version": 2,
    "description": "__MSG_extensionDescription__",
    "homepage_url": "http://www.donationbasedhosting.org/",
    "default_locale": "en",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": ["Resources/JavaScript/Background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "js": [
                "Resources/JavaScript/Content.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "icons": {
        "16": "Resources/Icons/Icon16.png",
        "48": "Resources/Icons/Icon48.png",
        "128": "Resources/Icons/Icon128.png"
    },
    "page_action": {
        "default_icon": {
            "38": "Resources/Icons/OpenIdDisabled38.png",
            "19": "Resources/Icons/OpenIdDisabled19.png"
        },
        "default_title": "OpenId disabled"
    },
    "options_ui": {"page": "Resources/HTML/Options.html"}
}
